{
	"name": "icanboogie/render",
	"type": "library",
	"description": "Renders templates with a variety of template engines.",
	"keywords": [
		"render",
		"decorate"
	],
	"homepage": "https://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "https://olvlvl.com/",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/Render/issues",
		"source": "https://github.com/ICanBoogie/Render"
	},
	"config": {
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"prefer-dist": true,
	"require": {
		"php": ">=8.0",
		"icanboogie/event": "^4.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\Render\\": "lib/"
		},
		"files": [
			"lib/helpers.php"
		]
	}
}
